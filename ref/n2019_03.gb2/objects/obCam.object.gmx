        <codestring/>
        <whoName>self</whoName>
        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>/// Inicializar Variables

// Tamaño de la view
w = view_wview[0];
h = view_hview[0];
w2 = w/2;
h2 = h/2;

// limites de posicion
xmin = 0;
ymin = 0;
xmax = room_width - w;
ymax = room_height - h;

</string>
          </argument>
        </arguments>
